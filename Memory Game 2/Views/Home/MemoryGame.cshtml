
@{
    ViewBag.Title = "Index";
}

@section head{
    <link href="~/Content/memoryApp.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="~/signalr/hubs"></script>
<script src="~/Scripts/memoryApp.js"></script>
}
<br /><br />
<div ng-app="game" class="col-lg-12">
   
        <div class="row col-md-2 col-sm-2" id="infoBar">
           <div>
               <h3 id="name">User: </h3> <input id="username" class="form-control"/>
               <span class="help-block" id="alert">
                   Please enter your name and click <strong>Join</strong> to play.
               </span>
               <button class="btn btn-primary" id="join">Join</button>

               <h3>Matches</h3>
               <ul id="wins" class="list-inline">

               </ul>
           </div>
        </div>

    <div class="row col-md-10 col-sm-10" ng-controller="boardController" id="board">
        <button id="loadButton" class="hidden" ng-click="loadBoard()">Load</button>
        <div class="panel" id="{{row.Name}}"
                ng-repeat="row in game.Pieces">
            <div class="front">
                <div class="blackCover"></div>
            </div>
            <div class="back">
                <img ng-src="{{row.Image}}" class="mainIcon"/>
            </div>
        </div>
    </div>

    <div id="dialog-message" title="Game Over">
        <p id="modal-message">
        </p>
    </div>


</div>
